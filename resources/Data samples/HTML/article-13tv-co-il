                    ulFirst.append('<section class="zoomd-mobile-icon" style="display:inline-block;height:43px;z-index: 2147483647" zoomdSearch=\'{"trigger":"OnClick"}\'><div class="nav-button"><img src="' + icon + '" zoomdSearch=\'{"trigger":"OnClick"}\' alt="Zoomd search widget" style="width:21px;height: 21px;" /></div></section>');
                    jQuery("<scr" + "" + 'ipt async="async" src="//zdwidget3-bs.sphereup.com/zoomd/SearchUi/Script?clientId=04309663"></scr' + "" + "ipt>").appendTo(jQuery("body"));
                    var searchBox = jQuery('.search-box input[type="text"] + span');
                    for (var i = 0; i < searchBox.length; i++) {
                        jQuery(searchBox[i]).on("click", function () {
                            if (searchBox[i])
                                searchBox[i].previousElementSibling.value = ""
                        })
                    }
                })
            });
        }
    </script>
