    <script type='text/javascript'>
        if (!window.location.search.includes('webview=true')&&!window.location.search.includes('appState')) {
            jQuery(document).ready(function () {
                function waitForElement(path, callback) {
                    if (jQuery(path).length > 0) {
                        if (jQuery.isFunction(callback)) {
                            callback();
                        }
                    } else {
                        setTimeout(function () {
                            return waitForElement(path, callback);
                        }, 100);
                    }
                }

                waitForElement(".ul-wrp", function () {
                    const icon = "data:image/png;base64,";
                    const ulFirst = jQuery(".ul-wrp:first");
                    ulFirst.append('<section class="zoomd" style="display:inline-block;height:43px;z-index:2147483647;"><div class="search-box" onclick="onZoomdClick()"> <input type="text" zoomdSearch=\'{"trigger":"OnEnter"}\' placeholder=" "/ dir="ltr"> <span></span> </div></section>');
